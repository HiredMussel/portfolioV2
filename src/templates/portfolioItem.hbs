{{#each portfolioItems}}
<div class="portfolioItem" style="background-image: url({{image}})">
    <div class="portfolioContent">
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        <div class="portButtonContainer">
            {{#if viewLink}}
                <a href="{{viewLink}}"><button>Visit</button></a>
            {{/if}}
            {{#if sourceLink}}
                <a href="{{viewLink}}"><button>Source</button></a>
            {{/if}}
        </div>
    </div>
</div>
{{/each}}